# ====================================================
# CONFIGURACIÓN DEL SERVIDOR
# ====================================================
NODE_ENV=development
PORT=3001

# ====================================================
# CONFIGURACIÓN DE BASE DE DATOS PostgreSQL
# ====================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sedegesOjaRuta
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Pool de conexiones
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECT_TIMEOUT=2000

# SSL/TLS para PostgreSQL (Production)
DB_SSL_REJECT_UNAUTHORIZED=true

# ====================================================
# CONFIGURACIÓN JWT (CRITICAL - CAMBIAR EN PRODUCCIÓN)
# ====================================================
# IMPORTANTE: Generar un secreto fuerte (mínimo 32 caracteres)
# Comando: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_at_least_32_chars_long
TOKEN_EXPIRY=1h

# Refresh token (opcional)
REFRESH_TOKEN_SECRET=your_super_secret_refresh_key_here_at_least_32_chars_long
REFRESH_TOKEN_EXPIRY=7d

# ====================================================
# CONFIGURACIÓN HTTPS/SSL (Production)
# ====================================================
SSL_KEY=/etc/ssl/private/server.key
SSL_CERT=/etc/ssl/certs/server.crt

# ====================================================
# CONFIGURACIÓN CORS
# ====================================================
# Dominios permitidos (separados por comas)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ====================================================
# CONFIGURACIÓN DE LOGS
# ====================================================
LOG_LEVEL=debug
LOG_DIR=./logs

# ====================================================
# CONFIGURACIÓN DE RATE LIMITING
# ====================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5